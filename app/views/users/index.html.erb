

<h2 class="text-center text-uppercase fw-bold">Información de clientes <i class="fa-solid fa-users-line"></i></h2>
<hr>
<br>
<div class="d-flex justify-content-end">
<//%= link_to 'Agregar nuevo cliente', new_user_path(), class:'btn btn-primary text-uppercase' %>
</div>

<div class="card">

    <div class="card-header bg-primary text-light">
        <h4 class="text-uppercase font-weight-bold">Clientes SiscoBank</h4>
    </div>
<div class="card-body table-responsive">
<table class="table table-bordered table-light" style="width:100%;" id="table2">
    <thead class="table-dark">
        <tr>
            <th class="text-uppercase">Tipo de identificación</th>
            <th class="text-uppercase">Identifación</th>
            <th class="text-uppercase">Nombre</th>
            <th class="text-uppercase">Correo Electronico</th>
            <th class="text-uppercase">Fecha de Expiración</th>
            <th class="text-uppercase text-center">Ver mas</th>
            <th class="text-uppercase text-center">Editar</th>
            <th class="text-uppercase">Eliminar</th>

        </tr>
    </thead>
    <% @users.each do |u| %>

            <tr>

            <% if(u.type_person == true) %>
                <td>Cedula/Pasaporte</td>
            <% else %>
            <td>RIF</td>
            <% end %>
                <td><%= u.identification %></td>
                <td><%= u.name %></td>
                <td><%= u.email %></td>
                <td><%= u.document_expiration_date %></td>
                <td class="text-center"><button class="btn btn-dark"><%= link_to user_path(u.id) do %><i class="fas fa-eye text-white"></i><% end %></button></td>
                <td class="text-center"><button class="btn btn-primary"><%= link_to edit_user_path(u.id) do %><i class="fas fa-edit text-white"></i><% end %></button></td>
                <td class="text-center"><%= link_to '', user_path(u), data: {turbo_method: :delete, turbo_confirm: '¿Desea eliminar el cliente?'}, class:'btn btn-lg btn-danger fas fa-trash text-white' %></td>

            </tr>



    <% end %>
  </table>
 </div>
</div>
