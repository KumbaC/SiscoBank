<div class="container">
    <div class="main-body">

          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                  <% if(@users.type_person === true) %>
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="<%= @users.name %>" class="rounded-circle" width="150">
                  <% else %>
                    <img src="https://img.freepik.com/vector-gratis/ilustracion-concepto-empresa_114360-2581.jpg?w=740&t=st=1683501954~exp=1683502554~hmac=c39f67b4cfaea51dc823ff640b3cff8577bfb78379998ce3be784eb1c30f28c8" alt="<%= @users.name %>" class="rounded-circle" width="150">
                  <% end %>
                    <div class="mt-3">
                      <h4><%= @users.name %></h4>
                      <p class="text-secondary mb-1"><%= @users.email %></p>
                      <%= link_to '', users_path(), class:'btn btn-dark btn-lg fas fa-users' %>
                      <button class="btn btn-primary"><%= link_to edit_user_path(@users) do %><i class="fas fa-edit text-white"></i><% end %></button>
                      <%= link_to '', user_path(@users), data: { turbo_method: :delete, turbo_confirm: '¿Desea eliminar el cliente?' }, class:'btn btn-danger btn-lg fas fa-cancel' %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
                    <span class="text-secondary">https://<%= @users.name %>.com</span>
                  </li>

                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                    <span class="text-secondary">@<%= @users.name %></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
                    <span class="text-secondary">@<%= @users.name %></span>
                  </li>
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                    <span class="text-secondary">facebook.<%= @users.name %></span>
                  </li>
                </ul>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <% if(@users.type_person === true) %>
                    <div class="col-sm-3">
                      <h6 class="mb-0">Nombre completo</h6>
                    </div>
                    <% else %>
                     <div class="col-sm-3">
                      <h6 class="mb-0">Nombre de la empresa | Razón Social</h6>
                    </div>
                    <% end %>
                    <div class="col-sm-9 text-secondary">
                      <%= @users.name %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Correo Electronico</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @users.email %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                  <% if(@users.type_person === true) %>
                    <div class="col-sm-3">
                      <h6 class="mb-0">Cedula o Pasaporte</h6>
                    </div>
                     <div class="col-sm-9 text-secondary">
                      V- <%= @users.identification %>
                    </div>
                    <% else %>
                    <div class="col-sm-3">
                      <h6 class="mb-0">RIF</h6>
                    </div>
                     <div class="col-sm-9 text-secondary">
                      J- <%= @users.identification %>
                    </div>
                    <% end %>

                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Telefono Principal</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @users.main_phone %>
                    </div>
                  </div>
                  <hr>
                   <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Telefono Secundario</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                    <% if(@users.secondary_phone === '') %>
                       <p class="text-uppercase"> No posee</p>

                      <% else %>
                      <%= @users.secondary_phone %>
                      <% end %>
                    </div>
                  </div>
                  <hr>
                   <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Fecha de creación/expedición</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @users.document_issue_date %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Fecha de vencimiento</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= @users.document_expiration_date %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                    <% if(@users.type_person === true) %>
                      <span class="badge rounded-pill bg-success">Natural</span>
                    <% else %>
                      <span class="badge rounded-pill bg-primary">Jurídica</span>
                    <% end %>
                    </div>
                  </div>
                </div>
              </div>



            </div>
          </div>

        </div>
    </div>
